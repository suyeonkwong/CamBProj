<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="form"   uri="http://www.springframework.org/tags/form" %>
<%@ taglib prefix="ui"     uri="http://egovframework.gov/ctl/ui"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags"%>
<div class="card card-warning">
	<div class="card-body" style="height: 80px;">
		<form method="get" action="/student/volunteer/volunteerList"
			name="frmSearch" id="frmSearch">
			<div class="row" style="float: right;">
				<div>
					<div class="form-group" style="width: 100px;">
						<div class="custom-control custom-radio" style="padding-top: 7px;">
							<input type="radio" class="custom-control-input" id="volActCode"
								name="selSearch" value="volActCode"
								<c:if test="${param.selSearch=='volActCode'}">checked==true</c:if> />
							<label for="volActCode" class="custom-control-label">활동종류</label>
						</div>
					</div>
				</div>
				<div>
					<div class="form-group" style="width: 90px;">
						<div class="custom-control custom-radio" style="padding-top: 7px;">
							<input class="custom-control-input" type="radio" id="insName"
								name="selSearch" value="insName"
								<c:if test="${param.selSearch=='insName'}">checked==true</c:if> />
							<label for="insName" class="custom-control-label">기관명</label>
						</div>
					</div>
				</div>
				<div>
					<div class="form-group">
						<input type="text" class="form-control" id="keyword"
							name="keyword" placeholder="검색어를 입력해주세요" value="${param.keyword}" />
					</div>
				</div>
				&nbsp;&nbsp;
				<div>
					<div class="form-group">
						<button type="submit" class="btn btn-default"
							style="border-color: gray; width: 100px;">검색</button>
					</div>
				</div>
				&nbsp;&nbsp;
				<div>
					<div class="form-group">
						<button type="button" class="btn btn-primary"
							style="width: 100px;"
							onclick="javascript:location.href='/student/volunteer/volunteerListAppApply'">신규</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

<br />
<br />
<br />

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">봉사내역</h4>
			</div>
			<div class="card-body table-responsive p-0">
				<table class="table table-hover text-nowrap">
					<thead>
						<tr>
							<td>순번</td>
							<td>시작일자</td>
							<td>종료일자</td>
							<td>인정시간</td>
							<td>활동종류</td>
							<td>기관명</td>
							<td>활동내용</td>
							<td>첨부파일</td>
							<td>신청상태</td>
							<td>반려사유</td>
						</tr>
					</thead>
					<tbody style="text-align: center;">
						<c:forEach var="list" items="${list}">
							<tr onclick="fn_detail('${list.volNum}')">
								<td>${list.rnum}</td>
								<td>${list.startDate}</td>
								<td>${list.endDate}</td>
								<td>${list.volRecogTime}</td>
								<td>${list.volActCode}</td>
								<td>${list.insName}</td>
								<td>${list.volActContenT}</td>
								<td><c:if test="${list.fileGrNum!=null}">
										<img src="/resources/img/attach.png" style="width: 30px;">
									</c:if></td>
								<td>${list.procStatCode}</td>
								<td>${list.disauthRsn}</td>
							</tr>
						</c:forEach>
					</tbody>
				</table>
			</div>
		</div>
		<br />
		<div class="row">
<!-- 			<div id="paging" class="col-sm-12 text-center"> -->
<%-- 				<ui:pagination paginationInfo="${paginationInfo}" type="image" --%>
<%-- 					jsFunction="linkPage" /> --%>
<!-- 			</div> -->
			<div id="paging" class="col-sm-12 text-center">
		        		<ul class="pagination">
					    	<li style="list-style: none;" class="paginate_button page-item previous <c:if test="${paginationInfo.firstPageNoOnPageList <= 5 }">disabled</c:if>">
					        	<a href="/student/volunteer/volunteerList?pageNo=${paginationInfo.firstPageNoOnPageList - 5 }" data-dt-idx="0" class="page-link">이전</a>
					        </li>
					       
							<c:forEach var="pageNo" begin="${paginationInfo.firstPageNoOnPageList }" end="${paginationInfo.lastPageNoOnPageList }" varStatus="stat">
					        	<li style="list-style: none;" class="paginate_button page-item <c:if test="${pageNo == param.pageNo || (pageNo==1 && param.pageNo ==null)}">active</c:if>">
					            	<a href="/student/volunteer/volunteerList?pageNo=${pageNo}" data-dt-idx="${pageNo}" class="page-link">${pageNo}</a>
					            </li>
					        </c:forEach>
					       
					        <li style="list-style: none;" class="paginate_button page-item next <c:if test="${paginationInfo.lastPageNoOnPageList == paginationInfo.totalPageCount}">disabled</c:if>">
					          <a href="/student/volunteer/volunteerList?pageNo=${paginationInfo.lastPageNoOnPageList + 1 }" data-dt-idx="${paginationInfo.lastPageNoOnPageList + 1 }" class="page-link">다음</a>
					        </li>
						</ul>
		        	</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	//상세내역보기 함수, 파라미터로 보내면 되는데 저기서 하면 안됨
	function fn_detail(num) {
		location.href = '/student/volunteer/volunteerDetailList?volNum=' + num;
	}
	//페이징
// 	function linkPage(pageNo) {
// 		location.href = "/student/volunteer/volunteerList?pageNo=" + pageNo;
// 	}
</script>
            var memId=$("#memId").val();
            var memIdList = ($("#tbody > tr > td:eq(2)").text());
            console.log(memId);
            console.log(memIdList);
                       
            for(var i=0; i < memIdList ; i++){
               console.log($("#tbody > tr > td:eq(2)").text());
               
               if(memId != memIdList[i]){
                    $("#tbody > tr").css("background","lightGray");
                
               }
            }
            
         });
 */
      </script>
</body>
</html>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<style>
	th,td{
		vertical-align : middle !important;
	}
	th{
		text-align: center !important;
	}
	th{
	 	background-color: #F7F8FB;
	 }
